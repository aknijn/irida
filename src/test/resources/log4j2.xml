<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="IRIDATestConfig">
  <Appenders>
    <Appender type="Console" name="STDOUT">
      <Layout type="PatternLayout" pattern="%d{DATE} %5p %c{1}:%L - %m%n"/>
    </Appender>
  </Appenders>
 
  <Loggers>
    <Logger name="ca.corefacility.bioinformatics.irida" level="debug" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>

    <Root level="error">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
 
</Configuration>
